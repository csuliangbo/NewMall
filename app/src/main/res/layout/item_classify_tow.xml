<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_default_click"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/classify_tow_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/ic_default_img"
        android:layout_margin="@dimen/padding_and_margin"/>

    <TextView
        android:id="@+id/classify_tow_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:maxLines="2"
        android:padding="@dimen/padding_and_margin"
        android:text="分类"
        android:textColor="@color/black_gray"
        android:textSize="@dimen/text_size_x" />
</LinearLayout>