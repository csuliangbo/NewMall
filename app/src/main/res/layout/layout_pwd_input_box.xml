<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_pwd_input_box"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_general_input_box"
    android:orientation="horizontal">

    <EditText
        android:id="@+id/et_user_login_pwd"
        style="@style/user_center_userpwd_exit_style"
        android:layout_marginRight="@dimen/padding_and_margin"
        android:layout_weight="1.0"
        android:hint="@string/str_enter_pwd" />

    <CheckBox
        android:id="@+id/cb_user_login_display_pwd"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:button="@drawable/selector_user_centent_display_pwd"
        android:gravity="center_vertical" />

</LinearLayout>