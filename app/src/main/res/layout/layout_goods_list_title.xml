<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/default_title_height"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/title_default_back"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="0.8"
            android:background="@drawable/bg_title_back"
            android:gravity="center"
            android:padding="@dimen/padding_and_margin_x"
            android:src="@drawable/ic_menu_back" />

        <LinearLayout
            android:id="@+id/search_ly"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/padding_and_margin_x"
            android:layout_weight="0.2"
            android:background="@drawable/bg_search_ly"
            android:gravity="center">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_search"
                android:gravity="center"
                android:padding="@dimen/padding_and_margin"
                android:text="@string/str_search_goods"
                android:textColor="@color/mall_gray"
                android:textSize="@dimen/text_size_x" />

        </LinearLayout>

        <CheckBox
            android:id="@+id/title_default_right_check"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="0.8"
            android:background="@drawable/bg_title_edit"
            android:button="@drawable/bg_shop_list_check"
            android:checked="false"
            android:gravity="center_vertical"
            android:padding="@dimen/padding_and_margin_x" />

    </LinearLayout>

    <View style="@style/default_hour_view" />
</LinearLayout>