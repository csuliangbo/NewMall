<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/flash_text_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:padding="@dimen/padding_and_margin"
        android:text="距本场结束"
        android:textColor="@color/black_gray"
        android:textSize="@dimen/text_size_xx" />

    <TextView
        android:id="@+id/flash_text_d"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@drawable/bg_flash_sale"
        android:text="00"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_xxxxxx" />

    <TextView
        android:id="@+id/after_day_text"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:text="天"
        android:textColor="@color/black_gray"
        android:textSize="@dimen/text_size_xx" />

    <TextView
        android:id="@+id/flash_text_h"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@drawable/bg_flash_sale"
        android:text="00"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_xxxxxx" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:text=":" />

    <TextView
        android:id="@+id/flash_text_m"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@drawable/bg_flash_sale"
        android:text="00"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_xxxxxx" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:text=":" />

    <TextView
        android:id="@+id/flash_text_s"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@drawable/bg_flash_sale"
        android:text="00"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_xxxxxx" />

</LinearLayout>